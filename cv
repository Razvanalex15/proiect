(() => {
  "use strict";

  class PubSub {
    constructor() {
      this.subscriptions = new Map();
    }
    subscribe(name, fn) {
      const list = this.subscriptions.get(name) || [];
      list.push(fn);
      this.subscriptions.set(name, list);

      return () => {
        const cur = this.subscriptions.get(name) || [];
        this.subscriptions.set(name, cur.filter(x => x !== fn));
      };
    }
    publish(name, data) {
      const list = this.subscriptions.get(name);
      if (!list) return;
      list.forEach(fn => fn(data));
    }
  }

  class ServerConnection extends PubSub {
    constructor() {
      super();
    }

    send(payload) {
      setTimeout(() => {
        this.publish("message", {
          room: payload.room,
          sender: "assistant",
          text: "Am primit: " + payload.text,
          ts: Date.now(),
        });
      }, 200);
    }
  }

  class ChatUI extends PubSub {
    constructor() {
      super();
      this.msgs = document.getElementById("msgs");
      this.input = document.getElementById("messageInput");
      this.sendBtn = document.getElementById("sendBtn");

      this.onSendClick = this.onSendClick.bind(this);
      this.onKeyDown = this.onKeyDown.bind(this);

      this.sendBtn.addEventListener("click", this.onSendClick);
      this.input.addEventListener("keydown", this.onKeyDown);
    }

    onKeyDown(e) {
      if (e.key === "Enter") this.onSendClick();
    }

    onSendClick() {
      const text = this.input.value.trim();
      if (!text) return;

      this.publish("send", { text });
      this.input.value = "";
      this.input.focus();
    }

    clearMessages() {
      this.msgs.innerHTML = "";
    }

    addMessage({ side, text }) {
      const div = document.createElement("div");
      div.className = side === "right" ? "msg right" : "msg left";
      div.textContent = text;
      this.msgs.appendChild(div);
      this.msgs.scrollTop = this.msgs.scrollHeight;
    }
  }

  class ChatApp {
    constructor() {
      this.connection = new ServerConnection();
      this.ui = new ChatUI();

      this.room = this.getActiveRoom();

      this.ui.subscribe("send", ({ text }) => {

        this.ui.addMessage({ side: "right", text });

        this.connection.send({ room: this.room, sender: "user", text });
      });

      this.connection.subscribe("message", (msg) => {
        if (msg.room !== this.room) return;
        this.ui.addMessage({ side: "left", text: msg.text });
      });

      document.querySelectorAll(".chat-item").forEach((item) => {
        item.addEventListener("click", () => {
          document.querySelectorAll(".chat-item").forEach(x => x.classList.remove("active"));
          item.classList.add("active");

          this.room = item.dataset.room;
          this.ui.clearMessages();

          this.ui.addMessage({ side: "left", text: `Ai deschis conversa»õia: ${this.room}` });
        });
      });
    }

    getActiveRoom() {
      const active = document.querySelector(".chat-item.active");
      return active?.dataset.room || "bmw-320d";
    }
  }

  new ChatApp();
})();























